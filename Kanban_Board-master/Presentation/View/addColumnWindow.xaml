<Window x:Class="Presentation.View.addColumnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="addColumnWindow" Height="234.919" Width="350">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="24,21,0,0" VerticalAlignment="Top"/>
        <Label Content="Column ordinal" HorizontalAlignment="Left" Margin="24,56,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="149,21,0,0" TextWrapping="Wrap" Text="{Binding Path=Name}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="149,56,0,0" TextWrapping="Wrap" Text="{Binding Path=Ordinal}" VerticalAlignment="Top" Width="120"/>
        <Button Content="add column" HorizontalAlignment="Left" Margin="123,105,0,0" VerticalAlignment="Top" Width="75" Click="addColumn_Click"/>
        <Label Content="{Binding Path=Message, Mode=OneWay}" Foreground="Red" HorizontalAlignment="Left" Margin="137,137,0,0" VerticalAlignment="Top"/>
       
    </Grid>
</Window>

<Window x:Class="Presentation.View.filterTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="filterTaskWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Filter" HorizontalAlignment="Left" Margin="336,180,0,0" VerticalAlignment="Top" Width="75" Click="Filter_Click"/>
        <TextBox Text ="{Binding Path=Key}" HorizontalAlignment="Left" Height="23" Margin="317,95,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter text" HorizontalAlignment="Left" Margin="249,95,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path=Message, Mode=OneWay}" Foreground="Red" HorizontalAlignment="Left" Margin="367,238,0,0" VerticalAlignment="Top"/>
        


    </Grid>
</Window>

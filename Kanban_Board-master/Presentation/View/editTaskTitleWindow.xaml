<Window x:Class="Presentation.View.editTaskTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="editTaskTitleWindow" Height="205.684" Width="249.768">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Left" Margin="77,96,0,0" VerticalAlignment="Top" Width="75" Click="OK_Click"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding Path=Title, Mode=TwoWay}" Height="23" Margin="54,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter task title" HorizontalAlignment="Left" Margin="70,37,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path=Message, Mode=OneWay}" Foreground="Red" HorizontalAlignment="Left" Margin="54,120,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.509,0.583"/>

    </Grid>
</Window>
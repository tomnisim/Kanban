<Window x:Class="Presentation.View.limitColumnTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="limitColumnTasksWindow" Height="208.817" Width="244.548">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Left" Margin="73,106,0,0" VerticalAlignment="Top" Width="75" Click="OK_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="53,73,0,0" TextWrapping="Wrap" Text="{Binding Path=Limit}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter column limit" HorizontalAlignment="Left" Margin="58,42,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path=Message, Mode=OneWay}" Foreground="Red" HorizontalAlignment="Left" Margin="35,131,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>